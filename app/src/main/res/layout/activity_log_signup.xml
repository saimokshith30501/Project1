<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/log_sign_back"
    tools:context=".LoginOrSignUp">

    <TextView
        android:id="@+id/App"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="278dp"
        android:fontFamily="@font/reg_r"
        android:text="App"
        android:textColor="#000000"
        android:textSize="50dp"
        android:textStyle="bold"
        android:transitionName="trans1"
        app:layout_constraintBottom_toTopOf="@+id/SignUpBT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/SignUpBT"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_back_signup"
        android:elevation="10dp"
        android:fontFamily="@font/reg_r"
        android:onClick="signup"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="#575555"
        android:textSize="15sp"
        android:transitionName="trans2"
        app:layout_constraintBottom_toTopOf="@+id/LoginTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/LoginTv"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginBottom="100dp"
        android:fontFamily="@font/reg_r"
        android:onClick="login"
        android:padding="10dp"
        android:text="Log In"
        android:textAlignment="center"
        android:textColor="#575555"
        android:textSize="15sp"
        android:textStyle="bold"
        android:transitionName="trans3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>